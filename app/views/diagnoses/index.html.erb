      <table>
	<thead>
	<tr>
	  <th>
	    コード
	  </th>
	  <th>
	    病名
	  </th>
	</tr>
	</thead>
	<tbody>
	  <%= @diagnoses %>
       <% @diagnoses.each do |diagnosis| %>
	<tr>
	  <td>
	    <%= diagnosis[:code] %>
	  </td>
	  <td>
	    <%= diagnosis[:description] %>
	  </td>
	</tr>
	<% end %>
	</tbody>
