<p id="notice"><%= notice %></p>

<h1>EHRs</h1>

<table>
  <thead>
    <tr>
      <th>EHR ID</th>
      <th>ORCA ID</th>
      <th>Name</th>
      <th>DoB</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ehrs.each do |ehr| %>
      <tr>
        <td><%= ehr.id %></td>
	<td><%= ehr.person.orca_id %></td>
        <td><%= ehr.person.name %></td>
	<td><%= ehr.person.dob %></td>
	<td><%= ehr.person.gender %></td>
        <td><%= link_to 'Show', ehr_diagnoses_lists_path(ehr.id) %></td>
        <td><%= link_to 'Edit', edit_ehr_path(ehr.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

